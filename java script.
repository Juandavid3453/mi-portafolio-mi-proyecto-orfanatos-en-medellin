import java.util.ArrayList;
import java.util.Scanner;

// -------------------------------
// MODELO: Clase Ni√±o
// -------------------------------
class Nino {
    private String nombre;
    private int edad;
    private String estado;

    public Nino(String nombre, int edad, String estado) {
        this.nombre = nombre;
        this.edad = edad;
        this.estado = estado;
    }

    @Override
    public String toString() {
        return "\n--- Informaci√≥n del ni√±o ---" +
               "\nNombre: " + nombre +
               "\nEdad: " + edad +
               "\nEstado: " + estado;
    }
}

// -------------------------------
// GESTOR: Control de datos
// -------------------------------
class GestorOrfanato {
    private ArrayList<Nino> listaNinos = new ArrayList<>();

    public void registrarNino(String nombre, int edad, String estado) {
        listaNinos.add(new Nino(nombre, edad, estado));
        System.out.println("\n‚úî Ni√±o registrado exitosamente.");
    }

    public void mostrarNinos() {
        if (listaNinos.isEmpty()) {
            System.out.println("\n‚ö† No hay ni√±os registrados.");
            return;
        }

        System.out.println("\nüìã Lista de ni√±os registrados:");
        for (Nino nino : listaNinos) {
            System.out.println(nino);
        }
    }
}

// -------------------------------
// MAIN: Men√∫ principal
// -------------------------------
public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        GestorOrfanato gestor = new GestorOrfanato();

        int opcion;

        do {
            System.out.println("\n==============================");
            System.out.println("    ORFANATOS MEDELL√çN");
            System.out.println("==============================");
            System.out.println("1. Registrar ni√±o");
            System.out.println("2. Ver lista de ni√±os");
            System.out.println("3. Salir");
            System.out.print("Elige una opci√≥n: ");

            opcion = entrada.nextInt();
            entrada.nextLine();  // limpiar buffer

            switch (opcion) {
                case 1:
                    System.out.print("Nombre del ni√±o: ");
                    String nombre = entrada.nextLine();

                    System.out.print("Edad: ");
                    int edad = entrada.nextInt(); 
                    entrada.nextLine();

                    System.out.print("Estado (salud/bienestar): ");
                    String estado = entrada.nextLine();

                    gestor.registrarNino(nombre, edad, estado);
                    break;

                case 2:
                    gestor.mostrarNinos();
                    break;

                case 3:
                    System.out.println("\n Saliendo del sistema...");
                    break;

                default:
                    System.out.println("\n Opci√≥n no v√°lida.");
            }

        } while (opcion != 3);

        entrada.close();
    }
}

